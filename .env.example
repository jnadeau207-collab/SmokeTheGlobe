# Database connection string for Prisma
DATABASE_URL="postgresql://username:password@localhost:5432/smoketheglobe"

# NextAuth configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_here"

# Cron job auth token for server-to-server import triggers
CRON_SECRET="your_secure_cron_token_here"

# (Optional) If deploying on Vercel with cron, ensure NEXTAUTH_URL is your production URL and set CRON_SECRET in env.

# ETL integration settings
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
OPENAI_API_KEY=
ETL_ENABLE_CA=0 # Set to 1 to enable ETL for California.
ETL_ENABLE_WA=0 # Set to 1 to enable ETL for Washington.
ETL_ENABLE_ON=0 # Set to 1 to enable ETL for Ontario.
